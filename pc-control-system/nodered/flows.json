    {
        "id": "func-volume",
        "type": "function",
        "z": "tab-pc-control",
        "name": "Extrair volume %",
        "func": "// alexa-home envia bri (0-254) como dimmer\nvar bri = msg.payload.bri || msg.payload.on_request_bri || 127;\nvar volume = Math.round((bri / 254) * 100);\nmsg.url = 'http://localhost:3000/api/command/set-volume';\nmsg.method = 'POST';\nmsg.headers = {'Content-Type': 'application/json'};\nmsg.payload = { volume: volume };\nreturn msg;",
        "outputs": 1,
        "x": 400,
        "y": 680,
        "wires": [["http-out"]]
    },
