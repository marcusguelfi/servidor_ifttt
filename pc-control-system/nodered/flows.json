        "id": "func-shutdown",
        "type": "function",
        "z": "tab-pc-control",
        "name": "POST shutdown",
        "func": "msg.url = 'http://localhost:3000/api/command/shutdown';\nmsg.method = 'POST';\nmsg.headers = {'Content-Type': 'application/json'};\nmsg.payload = {};\nreturn msg;",
